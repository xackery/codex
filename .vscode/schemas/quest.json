{
    "$id": "https://json.schemastore.org/workflows.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NPC Schema",
    "type": "object",
    "properties": {
        "quests": {
            "type": "array",
            "description": "List of quests",
            "items": {
                "required": [
                    "name",
                    "alla",
                    "min",
                    "max",
                    "id"
                ],
                "type":"object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Quest ID"
                    },
                    "name": {
                        "type": "string",
                        "description": "Quest name"
                    },
                    "alla": {
                        "type": "integer",
                        "description": "Quest Alla ID"
                    },
                    "min": {
                        "type": "integer",
                        "description": "Quest Min Level"
                    },
                    "max": {
                        "type": "integer",
                        "description": "Quest Max Level"
                    }
                }
            }
        }
    }
}
